---
import Header from "../components/Header.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <Header/>
    <div class="container">
        <div class="form-container">
            <h1>Login</h1>
            <form action="/login" method="post" id="login-form">
                <label>
                    <p>Username:</p> <input type="text" id="username" name="username">
                </label>
                <label>
                    <p>Password:</p> <input type="password" name="password" id="password">
                </label>
                <button class="loginUser" type="submit">Login</button>
            </form>
        </div>
        <div class="image-container">
            <img src="/public/loginimage.png" alt="login Image">
        </div>
    </div>
</Layout>

<script>
    const login = document.querySelector("#login-form") as HTMLFormElement
    login.addEventListener("submit", async(e)=>{
        e.preventDefault()
        // pass the data
        const formdata = new FormData(e.target as HTMLFormElement)
        const formObj = Object.fromEntries(formdata.entries())
        const res = await fetch(`http://localhost:3000/login`,{
            method: "POST",
            credentials: "include",
            headers:{
                "Content-Type": "application/json"
            },
            // send the data
            body: JSON.stringify(formObj)
        })

        if(!res.ok){
            window.location.href = "/login"
            return
        }

        window.location.href = "/"
    })
</script>

<style>
    .container{
        display: grid;
        grid-template-columns: repeat(2,1fr);
        height: 100vh;
    }
    .form-container{
        display: flex;
        flex-direction: column;
        width: -100%;
        gap: 1em;
    }
    .form-container > h1{
        font-size: 4em;
        text-align: center;
    }
    #login-form{
        margin: 8em 0 0 0;
        display: flex;
        flex-direction: column;
        gap:1em;
        padding: 0 0 4em 0;
    }
    #login-form > label{
        font-size: 3em;
        margin: 0 1em;
        width: -100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    #login-form  label >p{
        width: 50%;
    }

    #login-form > label >input{
        margin: 0 auto;
        height: 2.5em;
        border-radius: 10px;
        width: 20em;
    }

    .loginUser{
        font-size: 1em;
        border: none;
        color: white;
        background-color: black;
        width: 20%;
        margin: 4em auto 0 auto;
        height: 3em;
    }

    .image-container{
        display: flex;
        justify-content: center;
        width: -100vh;
    }

    .image-container > img{
        max-width: 100%;
        width: auto;
    }

</style>